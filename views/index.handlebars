<h1>Welcome to Pak-N-Play!</h1>

<h2>Items that are available!</h2>

<ul>
  {{#each items}}
    {{#unless purchased}}
      {{> items/item-block purchase=true}}
    {{/unless}}
  {{/each}}
</ul>

<h2>Items you are borrowing!</h2>

<ul>
  {{#each items}}
    {{#if purchased}}
      {{> items/item-block purchase=false}}
    {{/if}}
  {{/each}}
</ul>

<h2>Add a new Item</h2>
<form class="create-form">

  <div class="form-group">
    <label for="ca">Item Name:</label>
    <input type="text" id="ca" name="item_name">
  </div>

  <div class="form-group">
    <label for="pa">Price:</label>
    <input type="text" id="pa" name="price">
  </div>

  <div class="form-group">
    <label for="purchased">Borrow?</label><br>
    <input type="radio" name="purchased" value="1" checked> Rented!<br>
    <input type="radio" name="purchased" value="0"> Returned!
  </div>



  <button type="submit">Add Item</button>
</form>
